# ==================== Development Stage ====================
FROM golang:1.24-alpine AS development

# 安装开发工具
RUN apk add --no-cache git ca-certificates tzdata curl bash

# 安装热重载工具
RUN go install github.com/air-verse/air@latest

# 安装调试工具
RUN go install github.com/go-delve/delve/cmd/dlv@latest

# 设置工作目录
WORKDIR /app

# 复制go.mod和go.sum
COPY go.mod go.sum ./

# 下载依赖
RUN go mod download

# 复制源代码
COPY . .

# 暴露端口
EXPOSE 8080 8081 2345

# 创建air配置文件
RUN echo '[build]\n\
  cmd = "go build -gcflags=\"-N -l\" -o ./tmp/main ./cmd/api"\n\
  bin = "tmp/main"\n\
  full_bin = "dlv exec ./tmp/main --listen=:2345 --headless=true --api-version=2 --accept-multiclient --continue"\n\
  include_ext = ["go", "tpl", "tmpl", "html"]\n\
  exclude_dir = ["assets", "tmp", "vendor", "frontend", "node_modules"]\n\
  include_dir = []\n\
  exclude_file = []\n\
  exclude_regex = ["_test.go"]\n\
  exclude_unchanged = false\n\
  follow_symlink = false\n\
  log = "build-errors.log"\n\
  delay = 1000\n\
  stop_on_error = true\n\
  send_interrupt = false\n\
  kill_delay = 500\n\
[log]\n\
  time = false\n\
[color]\n\
  main = "magenta"\n\
  watcher = "cyan"\n\
  build = "yellow"\n\
  runner = "green"\n\
[misc]\n\
  clean_on_exit = false' > .air.toml

# 使用air启动应用（支持热重载和调试）
CMD ["air", "-c", ".air.toml"]